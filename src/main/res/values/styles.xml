<resources>

    <style name="Theme.Mesh" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_mesh</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mesh</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mesh</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mesh</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mesh</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mesh</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mesh</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mesh</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mesh</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Mesh.Widget</item>

    </style>

    <style name="ActionBar.Solid.Mesh" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_mesh</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mesh</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mesh</item>
        <item name="progressBarStyle">@style/ProgressBar.Mesh</item>
    </style>

    <style name="ActionBar.Transparent.Mesh" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_mesh</item>
        <item name="progressBarStyle">@style/ProgressBar.Mesh</item>
    </style>

    <style name="PopupMenu.Mesh" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mesh</item>
    </style>

    <style name="DropDownListView.Mesh" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mesh</item>
    </style>

    <style name="ActionBarTabStyle.Mesh" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mesh</item>
    </style>

    <style name="DropDownNav.Mesh" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mesh</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mesh</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mesh</item>
    </style>

    <style name="ProgressBar.Mesh" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mesh</item>
    </style>

    <style name="ActionButton.CloseMode.Mesh" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mesh</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mesh.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Mesh</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mesh</item>
    </style>





    <style name = "Theme.Mesh.LightYellowBackground">

        <item name="android:background">@color/light_yellow_background</item>
    </style>


    <style name="ActionBarTabStyle.AppCompat" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mesh</item>
    </style>



</resources>
